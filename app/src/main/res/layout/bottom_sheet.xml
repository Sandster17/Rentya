<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reservation_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_design"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="-60dp">


        <Button
            android:id="@+id/confirm_reservation"
            android:layout_width="215dp"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_design"
            android:text="Reserve now"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/event_time"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/user_background"
            android:hint="Reservation Time"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/confirm_reservation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/event_date" />

        <EditText
            android:id="@+id/event_date"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/user_background"
            android:hint="Reservation Date"
            android:paddingStart="22dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/confirm_reservation"
            app:layout_constraintEnd_toStartOf="@+id/event_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginBottom="92dp"
            android:src="@drawable/ic_baseline_help_24"
            app:layout_constraintBottom_toTopOf="@+id/event_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.715"
            app:layout_constraintStart_toEndOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="393dp"
            android:layout_height="51dp"
            android:layout_marginBottom="268dp"
            android:gravity="left"
            android:text="*Please note that this reservation is only to view this rental, you may contact the owner for any other additional information or questions you may have."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/textView13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toTopOf="@+id/event_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>